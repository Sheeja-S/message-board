{{#if addNewMessage}}
  <h1>Ask a new Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="question">Question</label>
        {{input value=question id="question"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="note">Note</label>
        {{input value=note id="note"}}
      </div>

      <button {{action 'saveMessage1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button id="askQuestion" {{action 'messageFormShow'}}>Click here and ask a Question !!!</button>
{{/if}}
